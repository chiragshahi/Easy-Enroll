.main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign In

        // register form
        form(method='POST' action='/')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          button.btn.btn-primary(type='submit', style='display: block; margin: 0 auto; width:200px; height: 35px;') Sign In
        br
        button.btn.btn-primary(type='submit', style='display: block; margin: 0 auto; width:200px; height: 35px;') Sign Up

        br
        br
        if(response==1)
          .alert.alert-danger(role='alert')
            | Please fill out all fields!
          
        if(response==2)
          .alert.alert-danger(role='alert')
            | User is not registered!

        if(response==3)
          .alert.alert-danger(role='alert')
            | Password is incorrect!